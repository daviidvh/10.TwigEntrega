{% extends "plantilla.twig" %}

{% block title %}Index Estado{% endblock %}
{% block main %}


    <div class="container mt-4">
        <h2>Listado de Estados</h2>
        <table class="table table-hover">
            <thead class="thead-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>

                    <th></th>
                </tr>
            </thead>
            <tbody>

                {% for estado in estados %}
                    <tr>
                        <td>{{ estado.id }}</td>
                         <td>{{ estado.nombre }}</td>
                     </tr>
                {% endfor %}            
            </tbody>
        </table>
    </div>

{% endblock %}